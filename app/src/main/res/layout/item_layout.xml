<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/item_image_view"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:scaleType="fitCenter"
            android:src="@drawable/beef_icon"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/item_flavor_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beef Siomai"
            android:textColor="#000"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/item_price_textview"
            app:layout_constraintLeft_toRightOf="@+id/item_image_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Php 25.00"
            android:textColor="#000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@+id/item_image_view"
            app:layout_constraintBottom_toTopOf="@+id/item_price_textview"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>